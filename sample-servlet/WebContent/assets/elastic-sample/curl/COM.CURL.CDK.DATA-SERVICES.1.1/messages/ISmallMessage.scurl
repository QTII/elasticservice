{define-class public abstract ISmallMessage {inherits IMessage}

  {constructor public {default
                          body:any = {new {HashTable-of String, any}},
                          headers:IMessageHeaders = {IMessageHeaders}
                      }
    {construct-super
        body = body,
        headers = headers
    }
  }

  {method public abstract {get-small-message}:#IMessage}

}