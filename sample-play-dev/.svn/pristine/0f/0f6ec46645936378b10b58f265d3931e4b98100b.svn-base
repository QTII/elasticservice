{curl 8.0 package}

{package COM.CURL.CDK.RPC,
    version = "1.1",
    {compiler-directives careful? = true},
    translations-file = "messages.xml",
    resource-directory = "../resources/",
    default-locale = "en"
}

{doc
    type = package,
    COM.CURL.CDK.RPC
    {purpose This package provides remoting for AMF services.}
}

{import * from CURL.GUI.STANDARD}
{import * from CURL.IO.SOCKET}
{import * from COM.CURL.CDK.AMF}
{import * from COM.CURL.CDK.MESSAGING}
{import * from COM.CURL.CDK.MESSAGES}

{include 
    "AbstractEvent.scurl",
    "AbstractInvoker.scurl",
    "AbstractOperation.scurl",
    "AbstractService.scurl",
    "ActiveCalls.scurl",
    "AsyncRequest.scurl",
    "AsyncToken.scurl",
    "Fault.scurl",
    "FaultEvent.scurl",
    "InvokeEvent.scurl",
    "IResponder.scurl",
    "Operation.scurl",
    "RemoteObject.scurl",
    "Responder.scurl",
    "ResultEvent.scurl"
}
